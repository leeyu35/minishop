{
    "name": "minishop/minishop",
    "description": "The Laravel Minishop E-Commerce Platform.",
    "keywords": ["framework", "laravel", "minishop", "e-commerce"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1.0",
        "johnpbloch/wordpress-core": "4.7.*",
        "oomphinc/composer-installers-extender": "^1.0",
        "nwidart/laravel-modules": "~2.0",
        "cloudshop/composer-merge-plugin": "~1.0",
        "cartalyst/sentinel": "~2.0",
        "fideloper/proxy": "~3.3",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "~3.0",
        "barryvdh/laravel-ide-helper": "^2.4",
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "league/commonmark": "^0.15.4",
        "league/flysystem-aws-s3-v3": "^1.0",
        "mockery/mockery": "0.9.*",
        "orchestra/testbench": "^3.5",
        "phpunit/phpunit": "~6.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": ["fixture/App/", "app/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "app/*/composer.json",
                "packages/*/*/composer.json"
            ],
            "require": [
            ],
            "recurse": true,
            "replace": false,
            "merge-dev": false,
            "merge-extra": true,
            "merge-scripts": true,
            "merge-extra-deep": true
        },
        "installer-types": ["wordpress-core"],
        "installer-paths": {
            "public/site/app": ["type:wordpress-core"]
        },
        "branch-alias": {
            "dev-master": "2.0-dev"
        },
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta",
            "php artisan optimize"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "shopes": {
            "type": "composer",
            "url": "https://packagist.shopes.cn"
        },
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
