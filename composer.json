{
    "name": "minishop/minishop",
    "type": "project",
    "description": "Laravel Minishop",
    "keywords": ["laravel", "minishop", "ecommerce", "framework", "opensource"],
    "homepage": "https://minishop.shopes.cn",
    "license": "GPL-3.0+",
    "require": {
        "php": ">=7.0",
        "minishop/app": "~1.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "~3.0",
        "barryvdh/laravel-ide-helper": "^2.4",
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "league/commonmark": "^0.15.4",
        "league/flysystem-aws-s3-v3": "^1.0",
        "mockery/mockery": "0.9.*",
        "orchestra/testbench": "^3.5",
        "phpunit/phpunit": "~6.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },
    "config": {
        "vendor-dir": "./storage/vendor/",
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('docs/.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "App\\Bootstrap\\Bootstrap::postCreateProject"
        ]
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "app/*/composer.json",
                "app/Addon/*/*/composer.json"
            ],
            "require": [
            ],
            "recurse": true,
            "replace": false,
            "merge-dev": true,
            "merge-extra": true,
            "merge-scripts": true,
            "merge-extra-deep": true
        },
        "installer-types": ["wordpress-core", "minishop-module", "project", "minishop-addon"],
        "installer-paths": {
            "app/Laravel": ["laravel/laravel"],
            "public/home/app": ["type:wordpress-core"],
            "app/{$name}/": ["type:minishop-module"],
            "app/Addon/{$name}/": ["type:minishop-addon"]
        },
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "local": {
            "type": "path",
            "url": "storage/packages/*"
        },
        "shopes": {
            "type": "composer",
            "url": "https://packagist.shopes.cn"
        },
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
